{
    "name": "Opbeans",
    "description": "Opbeans inventory management system (Opbeat demo app)",
    "logo": "https://pbs.twimg.com/profile_images/700322766168305664/DpqY0ynV.png",
    "repository": "https://github.com/opbeat/opbeans",
    "keywords": ["opbeat", "opbeans", "performance monitoring", "error logging", "release tracking"],
    "success_url": "/",
    "env": {
        "REACT_APP_OPBEAT_APP_ID": {
            "description": "Opbeat App Id for the client app"
        },
        "REACT_APP_OPBEAT_ORG_ID": {
            "description": "Opbeat Organization Id for the client app"
        },
        "PGHOST": {
            "description": "PostgreSQL server host",
            "required": false
        },
        "PGPORT": {
            "description": "PostgreSQL server port",
            "required": false
        },
        "PGUSER": {
            "description": "PostgreSQL database username",
            "required": false
        },
        "PGPASSWORD": {
            "description": "PostgreSQL database password",
            "required": false
        },
        "PGDATABASE": {
            "description": "PostgreSQL database name",
            "required": false
        },
        "REDIS_URL": {
            "description": "Redis URL",
            "required": false
        }
    },
    "addons": [
       "heroku-redis:hobby-dev",
       "heroku-postgresql:hobby-dev",
       "opbeat:free"
    ]
}
